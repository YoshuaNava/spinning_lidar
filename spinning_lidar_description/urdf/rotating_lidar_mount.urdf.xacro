<?xml version="1.0"?>
<robot name="rotating_lidar_mount" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
    <xacro:include filename="$(find spinning_lidar_description)/urdf/hokuyo_ust_20lx.gazebo.xacro" />
    <xacro:include filename="$(find spinning_lidar_description)/urdf/hokuyo_ust_20lx.urdf.xacro" />
    <xacro:include filename="$(find spinning_lidar_description)/urdf/rotating_lidar_mount.transmission.xacro" />
    <xacro:include filename="$(find hector_xacro_tools)/urdf/inertia_tensors.urdf.xacro" />

    <xacro:property name="M_PI" value="3.14159265359"/>

    <xacro:macro name="rotating_lidar_mount_macro" params="parent mount_link axis_link lidar_link *origin">

        <link name="${mount_link}">
            <xacro:inertial_sphere_with_pose mass="0.1" diameter="0.03">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere_with_pose>
            <collision name="collision">
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.04 0.08 0.15"/>
                </geometry>
            </collision>
            <visual name="visual">
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <box size="0.04 0.08 0.15"/>
                </geometry>
                <material name="Grey">
                    <color rgba="0.6 0.6 0.6 1"/>
                </material>
            </visual>
        </link>

        <joint name="lidar_mount_root_joint" type="fixed">
            <xacro:insert_block name="origin"/>
            <axis xyz="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${mount_link}"/>
        </joint>

        <link name="${axis_link}">
            <xacro:inertial_sphere_with_pose mass="0.1" diameter="0.03">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere_with_pose>
            <visual name="visual">
                <origin xyz="0 0 0" rpy="0 ${M_PI/2} 0"/>
                <geometry>
                    <cylinder length="0.035" radius="0.02"/>
                </geometry>
                <material name="Grey">
                    <color rgba="0.6 0.6 0.6 1"/>
                </material>
            </visual>
        </link>

        <joint name="lidar_spin_joint" type="continuous">
            <origin xyz="0.035 0 0.06" rpy="0 0 0"/>
            <axis xyz="1.0 0 0"/>
            <parent link="${mount_link}"/>
            <child link="${axis_link}"/>
            <limit effort="1000" velocity="${2*M_PI}"/>
            <joint_properties damping="0.0" friction="0.0"/>
        </joint>

        <xacro:hokuyo_ust_20lx_model name="${lidar_link}" />

        <joint name="lidar_offset_joint" type="fixed">
            <origin xyz="0.035 0 0.025" rpy="0 0 0"/>
            <axis xyz="0 0 0"/>
            <parent link="${axis_link}"/>
            <child link="${lidar_link}"/>
        </joint>
        
        <xacro:lidar_spin_joint_transmission />

        <xacro:hokuyo_ust_20lx_gazebo   name="lidar_plugin_gazebo"
                                        lidar_link="${lidar_link}" 
                                        topic="spinning_lidar/scan" 
                                        update_rate="40.0"
                                        ray_count="1080"
                                        min_angle="-270"
                                        max_angle="270" />

        
    </xacro:macro>
</robot>
